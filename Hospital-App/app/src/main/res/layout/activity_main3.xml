<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5CC8F"
    tools:context=".MainActivity3">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text="Book Bed"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="40sp"
                android:textStyle="italic|bold" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text=" Total Manual Bed Available              : 50"
                android:textColor="#3200FF"
                android:textSize="21sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text=" Total Semi Electric  Bed Available  : 50"
                android:textColor="#3200FF"
                android:textSize="21sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text=" Total Full Electric Bed Available      : 20"
                android:textColor="#3200FF"
                android:textSize="21sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:gravity="center_horizontal"
                android:text="Manual Bed"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="34dp"
                android:textStyle="italic|bold"/>

            <EditText
                android:id="@+id/edManual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:ems="10"
                android:hint="25000 Rupees/Per Day"
                android:inputType="numberDecimal"
                android:textSize="23dp"
                android:textColorHint="#3200FF" />

            <Button
                android:id="@+id/bMP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:textSize="28dp"
                android:textColor="#000000"
                android:background="@color/white"
                android:textStyle="italic|bold"
                android:text="Payment" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:gravity="center_horizontal"
                android:text="Semi Electric Bed"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="34dp"
                android:textStyle="italic|bold" />

            <EditText
                android:id="@+id/edSemi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:ems="10"
                android:hint="60000 Rupees/Per Day"
                android:inputType="numberDecimal"
                android:textSize="23dp"
                android:textColorHint="#3200FF"  />

            <Button
                android:id="@+id/bSP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:textSize="28dp"
                android:textColor="#000000"
                android:background="@color/white"
                android:textStyle="italic|bold"
                android:text="Payment"  />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:gravity="center_horizontal"
                android:text="Full Electric Bed"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="34dp"
                android:textStyle="italic|bold" />

            <EditText
                android:id="@+id/edFull"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:ems="30"
                android:hint="80000 Rupees/Per Day"
                android:inputType="numberDecimal"
                android:textSize="23dp"
                android:textColorHint="#3200FF"  />

            <Button
                android:id="@+id/bFP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:textSize="28dp"
                android:textColor="#000000"
                android:background="@color/white"
                android:textStyle="italic|bold"
                android:text="Payment" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>